<%= render(:partial => 'shared/error_messages', :locals => {:object => 
	@subject})%>

<table summary="Subject from fields">
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= f.text_field(:position) %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= f.text_field(:visible) %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= f.datetime_select(:created_at, :order => [:month, 
				:day, :year]) %></td>
		</tr>
	</table>